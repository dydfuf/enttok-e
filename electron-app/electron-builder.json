{
  "appId": "com.kakaoent.enttok-e",
  "productName": "Enttok-E",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": ["dist-react/**/*", "dist-electron/**/*"],
  "extraResources": [
    { "from": "../backend-bun/dist/backend-bun", "to": "backend-bun" }
  ],
  "mac": {
    "target": ["dmg", "zip"],
    "category": "public.app-category.productivity"
  },
  "win": {
    "target": ["nsis", "portable"]
  },
  "linux": {
    "target": ["AppImage", "deb"]
  }
}
